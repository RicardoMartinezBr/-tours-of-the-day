      <% when "Amsterdam" || "Netherlands" %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://res.cloudinary.com/dynirwhqr/image/upload/v1617961539/aimti1gz265owscbrgehnev13y19.jpg) ">
      <% when "Zaanse Schans" %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://res.cloudinary.com/dynirwhqr/image/upload/v1618085814/bgpbrjv0x974ql2l7ydwgt9cebpr.jpg) ">
