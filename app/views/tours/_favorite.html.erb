<div class="container">
  <div class="h1-favorite-wrapper d-flex mx-1">
    <div class=" d-flex w-100">
      <% if @tour.user.photo.attached? %>
        <%= cl_image_tag @tour.user.photo.key, class: "show-page-avatar mr-3" %>
      <% else %>
        <%= image_tag "https://images.unsplash.com/photo-1593099295589-ee5c1aa4164f?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=2736&q=80", class: 'preview-avatar mb-2', width: '60px', height: '60px'%>
      <% end %>
      <h1 class="show-page-h1"><%= @tour.user.first_name %></h1>
      <!-- <p class="show-page-tour-location"><%= @tour.location %></p> -->
      <%= render 'favorites/favoriteJS', tour: tour %>
    </div>
  </div>
</div>
