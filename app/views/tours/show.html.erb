<div class="custom-container header-and-rating mt-3">
  <h1><%= @tour.name %></h1>
  <div class="d-flex justify-content-between mt-3">
    <p>100 reviews</p>
    <span>Add to favorite</span>
  </div>
</div>

<div class="custom-container tour-photos-layout">
  <div class="side-carousel-image mr-2">
    <%= cl_image_tag @tour.photos[1].key, class: "mb-2 show-image-size" %>
    <%= cl_image_tag @tour.photos[2].key, class: "show-image-size" %>
  </div>
  <div class="carousel">
    <%= cl_image_tag @tour.photos[0].key, class: "carousel-size" %>
  </div>
    <div class="side-carousel-image ml-2">
    <%= cl_image_tag @tour.photos[3].key, class: "mb-2 show-image-size" %>
    <%= cl_image_tag @tour.photos[4].key, class: "show-image-size" %>
  </div>
</div>

<div class="custom-container my-5 description-booking-wrapper">
  <div class="tour-descriptio-show">
    <p><%= @tour.description %></p>
    <h3><%= @tour.city %></h3>
  </div>

  <div class="booking-form">
    <div class="booking-box">
      <h2>Book your Tour</h2>
      <%= simple_form_for ([@tour, @reservations]) do |f| %>
      <%= f.input :date, as: :date, html5: true %>
      <%= f.input :amount_of_people, placeholder: 'E.g. 1' %>
      <div class="details-show-price py-2 pr-1">
        <p class="text-center" id="priceCalculator" data-price="<%= @tour.price %>"> Total: â‚¬ <%= number_with_precision(@tour.price, precision: 0) %> <span>p/p</span></p>
      </div>
      <%= f.submit "Book Now", class:"btn btn-danger w-100 button-design" %>
      <% end %>
    </div>
  </div>
</div>
