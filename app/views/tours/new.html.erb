<div class="new-tour-bg py-5">
  <div class="container new-tour-form">
    <h1 class="pl-2">Create Your Tour</h1>

    <div class="container">
      <%= simple_form_for @tour do |f| %>
        <%= f.input :name, label: "Tour Name", placeholder: ' Tour name... E.g. City Tour?' %>
        <%= f.input :city, placeholder: 'In what city is the tour? E.g. Amsterdam' %>
        <%= f.input :price, placeholder: 'What is the price of the tour? E.g. Price 150 p/p' %>
        <%= f.input :duration, placeholder: 'How long is the tour? E.g. 1 for one hour or 1,5 for one and half hour' %>
        <%= f.input :category, placeholder: 'Tour category E.g. private tour or group tour...' %>
        <%= f.input :description, as: :text, placeholder: 'Add here the description of you tour!' %>
      <label class="btn btn-dark">
        <i class="fas fa-images"></i> Add photos to your tour
        <span style="display:none;">
          <%= f.input :photos, as: :file, input_html: { multiple: true }, required: true %>
        </span>
      </label>

        <div class="d-flex">
          <%= f.submit "Create Tour", class:'btn btn-danger' %>
          <% if action_name == 'edit' %>
            <%= link_to(tour, method: :delete, data: { confirm: 'Are you sure?' }, class: "ml-2") do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
