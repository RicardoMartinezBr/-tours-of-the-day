<div class="d-flex flex-column justify-content-center align-items-center">
  <div class="container-login mt-5 p-3">
    <h2 class="text-center">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-danger mb-3" %>
        </div>
      <% end %>
    </div>
  </div>


  <div class="container d-flex justify-content-center">
    <div class="row">
      <div class="col-12" id="lower-buttons">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "New to HomeTog? Sign up", new_registration_path(resource_name), class: "lower-buttons" %><br />
      <% end %>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "lower-buttons" %><br />
      <% end %>
      </div>
    </div>
  </div>
</div>
