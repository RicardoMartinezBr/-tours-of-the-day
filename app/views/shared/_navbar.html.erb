<div class="navbar-custom-layout">
  <div class="custom-container">
    <div class="navbar navbar-expand-sm navbar-light navbar-tours">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "logo2.png" %>
      <% end %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>


      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="">
              <%= link_to "All Tours", tours_path, class: "nav-link" %>
            </li>
            <% if user_signed_in? %>
              <% if current_user.role == "Admin" || current_user.role == "Tour Guide" %>
                <li class="">
                  <%= link_to "Create a Tour", new_tour_path, class: "nav-link" %>
                </li>
              <% end %>
              <li class="nav-item">
                <%= link_to "Messages", "#", class: "nav-link mr-3" %>
              </li>
              <li class="nav-item dropdown">
              <% if current_user.avatar.attached? %>
                <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% else %>
                <%= image_tag "user.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% end %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
                <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
          <% else %>
            <li class="d-flex">
              <%= link_to "Login", new_user_session_path, class: "login-button" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="sub-nav d-flex justify-content-center">
  <div class=" w-100">
    <ul class="d-flex sub-nav-tabs w-100 py-2">
      <li><%= link_to "City Tour", tours_path(:query => "City Tour"), class: "sub-nav-tab-link" %></li>
      <li><%= link_to "Boat Tour", tours_path(:query => "Boat Tour"), class: "sub-nav-tab-link" %></li>
      <li><%= link_to "Private Tours", tours_path(:query => "Private Tours"), class: "sub-nav-tab-link" %></li>
      <li><%= link_to "Bike Tour", tours_path(:query => "Bike Tour"), class: "sub-nav-tab-link" %></li>
      <li><%= link_to "Museum Guide", tours_path(:query => "Museum Guide"), class: "sub-nav-tab-link" %></li>
      <li><%= link_to "Night Tour", tours_path(:query => "Night Tour"), class: "sub-nav-tab-link" %></li>
      <li><%= link_to "Keukenhof", tours_path(:query => "Keukenhof"), class: "sub-nav-tab-link" %></li>
      <li><%= link_to "Food Tour", tours_path(:query => "Food Tour"), class: "sub-nav-tab-link" %></li>
      <li><%= link_to "See all Categories", tours_path, class: "sub-nav-tab-link no-border" %></li>
    </ul>
  </div>
</div>
